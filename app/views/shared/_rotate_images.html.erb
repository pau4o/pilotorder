<style type="text/css">
.image-slideshow { margin: auto; margin-top: 10px;}
.image-slideshow img { padding: 5px; border: 1px solid #ccc; background-color: #eee;
  -webkit-box-shadow: 0 2px 4px #c5c5c6;
  -moz-box-shadow: 0 2px 4px #c5c5c6;
  box-shadow: 0 2px 4px #c5c5c6; }
</style>
<script type="text/javascript">
<!-- http://malsup.com/jquery/cycle/options.html -->
$(document).ready(function() {
    $('.image-slideshow').cycle({
    timeout: 6000,
    fx: 'fade' // choose your transition type, ex: fade, scrollUp, shuffle, etc...
	});
});
</script>
<div class="image-slideshow">
  <% (1..3).each do |idx| %>
    <%= image_tag "rotate-#{idx}.jpg", :width=> 900, :height => 350 %>
  <% end %>
</div>

