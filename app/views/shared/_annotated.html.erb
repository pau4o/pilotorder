<% if logged_in? %>
  <address class='primary'>
    <%= link_to current_user.login, "#", :class => "plus" %>
    <%= link_to t("Изход"), destroy_user_session_path, :class => "rule" %>
  </address>
<% else %>
  <address class='primary'>
<%- if controller_name != 'user_sessions' %>
    <%= link_to t("Влез"), new_session_path(:user), :class => "rule" %>
<%- end %>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t("Регистрирай се"), new_registration_path(:user), :class => "plus" %>
<%- end  %>
  <%= link_to t("Свържи се с нас"), contact_us_path, :class => "email" %>
  </address>
<% end %>
