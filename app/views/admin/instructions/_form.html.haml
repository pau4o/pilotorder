= form_for [:admin, @instruction] do |f|
  = f.error_messages
  %p
    = f.label :effective
    %br
    = f.datetime_select :effective
  %p
    = f.label :subject
    %br
    = f.text_field :subject
  %p
    = f.label :body
    %br
    = f.text_area :body
  %p
    = f.label :due
    %br
    = f.datetime_select :due
  %p
    = f.label :canceled
    %br
    = f.check_box :canceled
  %p
    = f.label :cancelation
    %br
    = f.datetime_select :cancelation
  %p
    = f.submit
