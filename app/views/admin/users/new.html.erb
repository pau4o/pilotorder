<% content_for :header do -%>
<%= t("Създаване на нов потребител") %>
<% end -%>

<% content_for :sidebar do -%>
    <%= render "admin/shared/error_messages", :target => @user%>
<% end -%>

<% form_for :user, :url => admin_users_path do |f| -%>
<table class="overview">
<%= cell((f.label :login, t(:login)), (f.text_field :login))%>
<%= cell((f.label :email), (f.text_field :email))%>
<%= cell((f.label :password, t(:password)), (f.password_field :password))%>
<%= cell((f.label :password_confirmation, t(:password_confirmation)), (f.password_field :password_confirmation))%>

<%= cell("", (submit_tag t(:create_account)))%>
<%= cell("", (link_to t(:back), admin_users_path))%>
</table>

<% end -%>

