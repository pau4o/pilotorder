<% content_for :sidebar do -%>
<h2><%= t("Моят акаунт") %></h2>

<div id="gravatar">
	<%= gravatar_image_tag( @user.email, :size => 128) %>
</div>

<ul>
	<li><%= link_to t("Промяна на профила"), edit_profile_url(current_user) %></li>
</ul>

<% if @user.not_using_openid? %>
<ul>
	<li><%= link_to t("Смяна на емайл адрес"), edit_email_user_url(@user) %></li>
	<li><%= link_to t("Смяна на парола"), edit_password_user_url(@user) %></li>
</ul>
<% end %>

<% unless admin? -%>
<ul>
	<li><%= link_to "Delete my account", user_url(current_user), :method => :delete, :confirm => "Are you sure you want to schedule your account for deletion? All data linked to your account on #{configatron.site_name} will be removed from our systems.\n\nTHIS ACTION CANNOT BE UNDONE!\n\nThanks for using #{configatron.site_name}. We hope to see you again soon!"%></li>
</ul>
<% end -%>

<p>
	<strong><%= t("Как мога да сменя моят аватар?") %></strong>
</p>

<p>
	<%= configatron.site_name %> <%= t("използва") %> <%= link_to "Gravatar", "http://gravatar.com" %> <%= t("за да показва потребителските аватари, те са базирани на емайл адресите.") %>
	<br />
	<%= link_to "Gravatar", "http://gravatar.com" %> <%= t("е безплатен за ползване") %>. <%= link_to t("Регистрирайте се"), "http://gravatar.com/signup" %> <%= t("ако все още нямате регистрация в") %> <%= link_to "Gravatar", "http://gravatar.com" %>.
</p>
<% end -%>
