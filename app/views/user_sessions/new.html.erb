<% content_for :header do -%>
<%# configatron.site_name %> Login
<% end -%>

<%= form_for resource, :url => session_path(resource_name) do |f| -%>
	<fieldset>	  
    <h1>Вход</h1>

    <%= devise_error_messages! %>

		<div class="field session_username clearfix">
    <label for="login">Потребител или електронен адрес</label><br/>
    <%= f.text_field 'login', :class => "larger widest" %>
		</div>

    <div class="field session_username clearfix">
      <label for="password"><%= t "password" %></label><br/>
    <%= f.password_field 'password', :class => "larger widest" %>
    </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field session_username clearfix">
    <%= f.check_box :remember_me %> <%= f.label(t :remember_me) %>
    </div>
  <% end -%>

  <p><%= f.submit "Влез" %></p>
<% end -%>

  <%= link_to "Забравихте си паролата?", new_password_path(resource_name) %><br />
<%# render :partial => "devise/shared/links" %>
