<% content_for :header do -%>
<%# configatron.site_name %> <%= t("Вход") %>
<% end -%>

<%= form_for resource, :url => session_path(resource_name) do |f| -%>
	<fieldset>	  
    <h1><%= t("Вход") %></h1>

    <%= devise_error_messages! %>
	  <%= flash_message.html_safe %>

		<div class="field session_username clearfix">
    <label for="login"><%= t("Потребител или електронен адрес") %></label><br/>
    <%= f.text_field 'login', :class => "larger widest" %>
		</div>

    <div class="field session_username clearfix">
      <label for="password"><%= t "password" %></label><br/>
    <%= f.password_field 'password', :class => "larger widest" %>
    </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field session_username clearfix">
    <%= f.check_box :remember_me %> <%= f.label(t :remember_me) %>
    </div>
  <% end -%>

  <p><%= f.submit t("Влез") %></p>
<% end -%>
<div class="field clearfix" style="clear:both; padding-top: 1em; clear">
  <%= link_to t("Забравихте си паролата?"), new_password_path(resource_name) %>
</div>
