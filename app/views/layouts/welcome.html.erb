<!doctype html>
<html lang="<%= locale %>">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title><%= configatron.site_name %></title>
    <%= stylesheet_link_merged :page %>
    <%= stylesheet_link_tag 'mobile' if mobile_device? %>
    <%= csrf_meta_tag %>
    <%= javascript_include_merged :base %>
    <!--[if lt IE 9]>
        <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body>
    <header>
      <h1><%= link_to "PilotOder.BG", root_path %></h1>
      <nav>
        <ul>
          <li><%= tab_to "Дейност", [ activity_path ] %></li>
          <li><%= tab_to "Политика", [ policy_path, pilot_code_path ] %></li>
          <li><%= tab_to "Сертификати", [ certificates_path ] %></li>
          <li><%= tab_to "Цени", [ prices_path , price_table_1_path, price_table_2_path ] %></li>
        </ul>
      </nav>
      <%= render :partial => "shared/annotated" %>
      <%= link_to t(locale), :controller => "page", :action => "change_lang",  %>
    </header>
    <%= flash_message.html_safe %>
    <section id='content'>
      <%- if @quote %>
      <header>
        <div class='box'>
          <blockquote><p>&ldquo;<%= @quote.message %>&rdquo;</p></blockquote>
          <p><%= @quote.author %></p>
        </div>
      </header>
      <%- end %>
      <div id='main'>
        <%= yield %>
      </div>
    </section>
    <%= render :partial => "shared/footer" %>
  </body>
</html>
